{% extends "base.twig" %}

{% block logo %}
{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
            <section class="article-content">
                <h1 class="article-h1">{{post.title}}</h1>
                <div class="article-body">
                    {{post.content}}
                </div>
            </section>
        </article>
    </div><!-- /content-wrapper -->
{% endblock %}

{% block photographers %}
    <!-- start: photographer block -->
    <article class="photographers-block">
		<div class="container">
			<div class="row">
				<div class="col-12 col-md-6">
					<h2 class="">dernier ajouts</h2>
				</div>
			</div>
		</div>        
		{% include 'partial/card-photographer.twig' %}
    </article>
    <!-- end: photographer block -->
{% endblock %}

{% block popular %}
    <!-- start: photographer block -->
    <article class="popular-block">
        <h2 class="">popular photographer</h2>        
        <ul>
            {% for profile in popular %}
                <li><a href="{{ profile.link }}">{{ profile.title }}</a></li>
                {# {% include 'partial/article-card.twig' %} #}
            {% endfor %}
        </ul>
    </article>
    <!-- end: photographer block -->
{% endblock %}

{% block categories %}
    <!-- start: categorie block -->
    <article class="photographers-block">
        <h2 class="">popular categories</h2>        
        <ul>
            {% for term in categories %}
                <li><a href="{{ term.link }}">{{ term.title }}</a> {{ term.meta('popular')|join('') }}
                    <img src="{{term.thumbnail.src('medium')}}" alt="{{term.thumbnail.alt}}">
                </li>
                {# {% include 'partial/article-card.twig' %} #}
            {% endfor %}
        </ul>
    </article>
    <!-- end: categorie block -->
{% endblock %}









