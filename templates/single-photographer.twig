{% extends "base.twig" %}

{% block content %}
    <div class="presentationphotographer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-md-5">
            <img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
          </div>
          <div class="col-12 col-md-9 offset-md-3">
            <a href="">Célébrités</a>
            <a href="">mode</a>
            <h1>{{ post.title }}</h1>
				<div class="article-body">
					{{ post.content }}
				</div>
			</section>

          </div>
        </div>
      </div>
    </div>

				{% if pictures %}
					<h2>Galerie</h2>
					{% for picture in pictures %}						
						<div class="taxonomy-picture">
							<img class="taxonomy-post-image" src="{{picture.guid|resize(300)}}" alt="{{picture.thumbnail.alt}}">
						</div>
					{% endfor %}
				{% endif %}
{% endblock %}