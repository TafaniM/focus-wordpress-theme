{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}


{% block allphotographers %}
<!-- start: photographer block -->

	<article class="photographers-block">
		{# <h2 class="">trending photographer</h2>         #}
		<ul>
			{% for profile in photographer %}
				<li><a href="{{ profile.link }}">{{ profile.title }}</a> {{ profile.meta('popular')|join('') }}
				<img src="{{profile.thumbnail.src('medium')}}" alt="{{profile.thumbnail.alt}}"></li>
				{# {% include 'partial/article-card.twig' %} #}
			{% endfor %}
		</ul>
		
	</article>
        
<!-- end: photographer block -->
{% endblock %}