<section class="trendingcategories">
    <div class="container">
        {% if photo_types %}
            {% for photo_type in photo_types %}
                <div class="cardcategorie">
                    <a href="{{ site.url }}/{{ photo_type.taxonomy }}/{{ photo_type.slug }}">
                        <article>
                            <div class="row">
                                <div class="col-8 col-md-10">
                                    <h4>{{ photo_type.name }}</h4>
                                </div>
                                <div class="col-4 col-md-2">
                                    <img src="{{ photo_type.image_url|resize(300) }}" alt="">
                                </div>
                            </div>
                        </article>
                    </a>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</section>