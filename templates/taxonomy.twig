								<p class="taxonomy-post-date">{{post.date}}</p>
								<p class="taxonomy-post-excerpt">{{post.excerpt}}</p>
							</div>
						{% endfor %}
					{% endif %}  #}

					{% if pictures %}
						{% include 'partial/pictures-gallery.twig' %}
					{% endif %}
				</div>
			</section>
		</article>
	</div>
{% endblock %}